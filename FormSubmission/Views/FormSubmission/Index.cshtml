@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/style.css"/>
    <title>Regstration</title>
</head>
<body>    
    <div class="form-group registration-container">
        <h4 class="title">Enter your information</h4>
        <form asp-action="Create" asp-controller="FormSubmission" method="post">

           
            <div class="form-group row">               
                <label asp-for="FirstName" class="col-sm-4 col-form-label">First Name</label>
                <div class="col-sm-8">
                    <input type="name" class="form-control" asp-for="FirstName" placeholder="First Name">
                     <span asp-validation-for="FirstName" class="error-message"></span>
                </div>
            </div>

            <div class="form-group row">                
                <label asp-for="LastName" class="col-sm-4 col-form-label">Last  Name</label>
                <div class="col-sm-8">
                    <input type="name" class="form-control" asp-for="LastName" placeholder="Last Name">
                    <span asp-validation-for="LastName" class="error-message"></span>
                </div>
            </div>
           
            <div class="form-group row">                
                <label asp-for="Age" class="col-sm-4 col-form-label">Age</label>
                <div class="col-sm-8">
                    <input type="name" class="form-control" asp-for="Age" placeholder="Age">
                    <span asp-validation-for="Age" class="error-message"></span>
                </div>
            </div>

           
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label">Email Address</label>
                <div class="col-sm-8">
                    <input type="name" class="form-control" asp-for="Email" placeholder="name@domain.com">
                    <span asp-validation-for="Email" class="error-message"></span>
                </div>
            </div>

            <div class="form-group row">               
                <label asp-for="Password" class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="error-message"></span>
                </div>
            </div>


            <div class="form-group submit-registration">
                <div class="form-group submit-button">
                    <button type="button submit" class="btn btn-primary btn-md float-left">Submit</button>
                </div>
            </div>

        </form>
    </div>
</body>
</html>